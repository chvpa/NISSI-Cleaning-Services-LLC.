---
import Cards from "../Cards.astro";
import FeaturesCards from "../FeaturesCards.astro";
import Arrow from "../Icons/Arrow.astro";
import Construction from "../Icons/Construction.astro";
import Home from "../Icons/Home.astro";
import OfficeIcon from "../Icons/OfficeIcon.astro";
import Window from "../Icons/Window.astro";
---

<section class=" bg-auto bg-center flex flex-col pt-16 px-8 h-screen"
style="background-image: url('./features-bg.jpg');">

    <!-- Heading -->

    <div class="grid lg:grid-cols-2 justify-center text-center lg:text-start gap-4 lg:flex-row lg:gap-12 lg:py-8">

        <div>
            <h1 class="mb-4 text-4xl tracking-tight font-extrabold text-[#131313]">Always Provide The Best Service</h1>
        </div>

        <div class="flex flex-col gap-4 items-center lg:items-start">
            <div>
                <h2 class="text-xl">We constantly strive to exceed your expectations. Our services are designed to offer you the best in every detail.</h2>
            </div>

            <div class="md:inline-block py-3 w-full lg:w-auto lg:inline-block lg:px-8 rounded-xl bg-yellow-300">
                <div class="flex flex-row gap-2 justify-center">
                <a class="text-[#131313] font-medium" href="#">Get Started</a>
                <Arrow/>
                </div>
            </div>
        </div>

    </div>

    <div class="py-12 grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 h-screen">

        <!-- Home Cleaning -->

        <Cards tittle="Home Cleaning.">
            <Home slot="icon"/>
                <FeaturesCards slot="item" paragraph="Bathroom Cleaning."/>
                <FeaturesCards slot="item" paragraph="Kitchen Cleaning."/>
                <FeaturesCards slot="item" paragraph="Bedrooms Cleaning."/>
                <FeaturesCards slot="item" paragraph="Living Rooms Cleaning."/>
                <FeaturesCards slot="item" paragraph="Garaje Cleaning."/>
        </Cards>

        <!-- Office Cleaning -->

        <Cards tittle="Office Cleaning.">
            <OfficeIcon slot="icon"/>
                <FeaturesCards slot="item" paragraph="Individual Offices."/>
                <FeaturesCards slot="item" paragraph="Reception And Waiting Areas."/>
                <FeaturesCards slot="item" paragraph="Meeting Rooms."/>
                <FeaturesCards slot="item" paragraph="Common Areas."/>
        </Cards>      

        <!-- Post Construction Cleaning -->

        <Cards tittle="Pos Construction cleaning.">
            <Construction slot="icon"/>
                <FeaturesCards slot="item" paragraph="Waste Dipostal."/>
                <FeaturesCards slot="item" paragraph="Surface Cleaning."/>
                <FeaturesCards slot="item" paragraph="Detailed clean."/>
        </Cards>    

        <!--    Window Cleaning  -->

            <Cards tittle="Window cleaning.">
                <Window slot="icon"/>
                <FeaturesCards slot="item" paragraph="Interior Cleaning."/>
                <FeaturesCards slot="item" paragraph="Exterior Cleaning."/>
            </Cards>

    </div>
    <!-- boxes -->

</section>