---
import HeroButton from "../HeroButton.astro";
import Email from "../Icons/Email.astro";
import Facebook from "../Icons/Facebook.astro";
import Instagram from "../Icons/Instagram.astro";
import Phone from "../Icons/Phone.astro";
import WhatsApp from "../Icons/WhatsApp.astro";
import MapIcon from "../MapIcon.astro";
---

<!-- Hero section -->

<section class="bg-cover bg-center flex flex-row justify-center px-8 h-screen overflow-hidden"
style="background-image: url('./bg2.avif');">
    
    <!-- Left Content Box -->

    <article class="animate-fade-up animate-delay-500 flex flex-col justify-center pt-44 h-screen lg:w-[900px]">
    
            <!-- New jersey heading -->
    <div class="flex flex-col justify-center">
        <div class="flex items-center gap-1 animate-delay-1000 animate-fade-down">
            <div>
                <MapIcon/>
            </div>
            <h4 class="text-white">
                New Jersey
            </h4>
        </div>

                <!-- Heading -->

        <div class="pt-2">
            <h1 class="inline-block leading-none tracking-tight font-black text-transparent text-[3em] lg:text-[4em] lg:text-center bg-clip-text bg-gradient-to-r from-sky-200 to-sky-300">Residential & Commercial<br>Cleaning Experts.</h1>
        </div>
    
                <!-- Paragraph -->

        <p class="pt-8 lg:py-8 text-white lg:text-center">
            Experience Unrivaled Cleanliness in Every Space! Entrust Your Home or Business to the Expert Touch of NISSI Cleaning Services. Schedule a Spotless Transformation Today!
        </p>
    </div>

    <!-- Request a Free Estimation -->
    <div class=" flex flex-grow flex-col justify-end pb-24 gap-8 lg:justify-center lg:items-center">
        <div>
            <HeroButton/>
        </div>
        
    <!-- Social Media Icons -->

        <div class="flex flex-row justify-center md:justify-start gap-4">
            <WhatsApp/>
            <Facebook/>
            <Instagram/>
            <Email/>
            <Phone/>
        </div>
    </div>
    </article>
</section>